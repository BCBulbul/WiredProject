<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="burakcanbulbul.konusarakogren.com.wiredproject.DetailActivity"
    tools:showIn="@layout/activity_detail">


    <ImageView
        android:scaleType="fitXY"
        android:layout_width="0dp"
        android:id="@+id/articleImage"
        tools:ignore="ContentDescription,MissingConstraints"
        android:layout_height="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/articleGenre"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="19dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <TextView
        android:singleLine="true"
        android:gravity="center"
        android:id="@+id/articleGenre"
        tools:ignore="Deprecated"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:textColor="#BF360C"
        android:textStyle="bold"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/articleAuthor"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="19dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <TextView
        android:textColor="#BF360C"
        android:textStyle="bold"
        android:singleLine="true"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:id="@+id/articleAuthor"
        tools:ignore="Deprecated"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/article"
        app:layout_constraintRight_toRightOf="@+id/articleGenre"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/articleGenre" />

    <TextView
        android:textStyle="bold"
        android:textColor="@color/textPrimary"
        android:gravity="center"
        android:scrollbars="vertical"
        android:text="TextView"
        android:layout_width="0dp"
        android:id="@+id/article"
        tools:ignore="HardcodedText"
        android:layout_height="252dp"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/articleAuthor"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/articleAuthor" />


</android.support.constraint.ConstraintLayout>
